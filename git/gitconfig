[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
[push]
	default = current
[diff]
	tool = nvimdiff
[merge]
	tool = nvimdiff
[difftool]
	prompt = false
[alias]
	co = checkout
	cm = commit
	st = status
	br = branch
	dt = difftool
	lf = log --pretty=oneline --name-status
[core]
	autocrlf = false
	excludesfile = ~/.gitignore_global
[mergetool "nvimdiff"]
	trustExitCode = false
[pull]
	rebase = false

[user]
    useConfigOnly = true

[includeIf "gitdir:~/workspace/github.com/Toraja/"]
    path = ~/toybox/git/personal.gitconfig

[ghq]
	root = ~/workspace
