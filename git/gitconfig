[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
[push]
	default = current
	autoSetupRemote = true
[diff]
	tool = nvimdiff
[merge]
	tool = nvimdiff
[difftool]
	prompt = false
[core]
	autocrlf = false
	excludesfile = ~/.gitignore_global
[mergetool "nvimdiff"]
	trustExitCode = false
[pull]
	rebase = false

[user]
    useConfigOnly = true

[includeIf "gitdir:~/workspace/personal.github.com/Toraja/"]
    path = ~/toybox/git/personal.gitconfig

[ghq]
	root = ~/workspace
